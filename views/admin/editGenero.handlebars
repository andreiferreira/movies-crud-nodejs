<h2 class="mt-4">Editar gênero</h2>

<div class="card">
    <div class="card-body">
        <form action="/admin/generos/edicao" method="POST">
            <div class="mb-3">
                <input type="hidden" name="id" value="{{genero._id}}">

                <label>Genero</label>
                <input type="text" name="nome" class="form-control" id="nome"  value={{genero.nome}}>
            </div>
            <div class="mb-3">
                <label class="form-label">Descrição</label>
                <input type="text" name="descricao" class="form-control" rows="3" value="{{genero.descricao}}"></input>
            </div>
            <div class="mb-3">
                <label class="form-label">Slug</label>
                <input type="text" name="slug" class="form-control" rows="3" value="{{genero.slug}}"></input>
            </div>
            <button type="submit" class="btn btn-success">Editar categoria</button>
        </form>
    </div>
</div>