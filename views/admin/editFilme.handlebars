<h2 class="mt-4">Editar Filme</h2>
<div class="card">
     <div class="card-body">
        <form action="/admin/filmes/edicao" method="POST">
            <div class="mb-3">
                <input type="hidden" value="{{filme._id}}" name="id">

                <label>Título</label>
                <input type="text" name="titulo" class="form-control" id="titulo"  value={{filme.titulo}}>
            </div>
            <div class="mb-3">
                <label class="form-label">Diretor</label>
                <input type="text" name="diretor" class="form-control" id="diretor" rows="3" value="{{filme.diretor}}"></input>
            </div>
             <div class="mb-3">
                <label class="form-label">Gênero</label>
                <select name="genero" class="form-control custom-select" rows="3" placeholder="Gênero do filme">
                    {{#each generos}}
                        <option value="{{filme._id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhum gênero de filme registrado</option>
                    {{/each}}
                </select>
            </div>           
            <div class="mb-3">
                <label class="form-label">Ano de lançamento</label>
                <input type="number" name="lancamento" class="form-control" id="lancamento" rows="3" value="{{filme.lancamento}}"></input>
            </div>
            <div class="mb-3">
                <label class="form-label">Sinopse</label>
                <textarea name="sinopse" class="form-control" id="textArea" rows="3">{{filme.sinopse}}</textarea>
            </div>
             <div class="mb-3">
                <label class="form-label">Slug</label>
                <input type="text" name="slug" class="form-control" id="slug" rows="3" value="{{filme.slug}}"></input>
            </div>    
            <button type="submit" class="btn btn-success">Editar categoria</button>
        </form>
    </div>
</div>
