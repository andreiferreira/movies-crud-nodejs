{{#each errors}}
    <div class="alert alert-danger">{{message}}</div>
{{else}}
{{/each}}

<h2 class="mt-4">Adicionar gênero</h2>

<div class="card">
    <div class="card-body">
        <form accept="/admin/generos/add" method="POST">
            <div class="mb-3">
                <label>Genero</label>
                <input type="text" name="nome" class="form-control" id="nome"  placeholder="Nome do gênero">
            </div>
            <div class="mb-3">
                <label class="form-label">Descrição</label>
                <input type="text" name="descricao" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Descrição do genero"></input>
            </div>
            <div class="mb-3">
                <label class="form-label">Slug</label>
                <input type="text" name="slug" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Slug do genero"></input>
            </div>
            <button type="submit" class="btn btn-success">Cadastrar categoria</button>
        </form>
    </div>
</div>